<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_light_with_border"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:lines="1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="MultiSnapRecyclerView"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/title"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/title"
        tools:text="Android library for multiple snapping of RecyclerView"
        />

    <ImageView
        android:id="@+id/languageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/title"
        app:layout_constraintTop_toBottomOf="@id/description"
        tools:src="@drawable/ic_circle_kotlin"
        />

    <TextView
        android:id="@+id/languageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/languageIcon"
        app:layout_constraintStart_toEndOf="@id/languageIcon"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintTop_toTopOf="@id/languageIcon"
        tools:text="Kotlin"
        />

    <ImageView
        android:id="@+id/starIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_star"
        app:layout_constraintBottom_toBottomOf="@id/languageName"
        app:layout_constraintStart_toEndOf="@id/languageName"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintTop_toTopOf="@id/languageName"
        />

    <TextView
        android:id="@+id/starCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/starIcon"
        app:layout_constraintStart_toEndOf="@id/starIcon"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintTop_toTopOf="@id/starIcon"
        tools:text="1520"
        />

    <ImageView
        android:id="@+id/forkIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_fork"
        app:layout_constraintBottom_toBottomOf="@id/starCount"
        app:layout_constraintStart_toEndOf="@id/starCount"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintTop_toTopOf="@id/starCount"
        />

    <TextView
        android:id="@+id/forkCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/forkIcon"
        app:layout_constraintStart_toEndOf="@id/forkIcon"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintTop_toTopOf="@id/forkIcon"
        tools:text="132"
        />

</androidx.constraintlayout.widget.ConstraintLayout>